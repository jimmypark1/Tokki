<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clipChildren="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/list_stroke_bg">

        <ImageView
            android:id="@+id/coverImgView"
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/round_white_card_bg"
            android:src="@drawable/no_poster_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/coverImgView"
            android:layout_marginLeft="15.7dp"
            android:layout_marginRight="11.7dp"
            android:layout_toRightOf="@+id/coverImgView">

            <TextView
                android:id="@+id/bestBGView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="1"/>

            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="제목"/>

            <TextView
                android:id="@+id/dateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@id/titleView"
                android:layout_below="@+id/titleView"
                android:textSize="12sp"
                android:text="2020.06.17"/>

            <TextView
                android:id="@+id/writerNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/dateView"
                android:layout_below="@+id/titleView"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/contentsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/writerNameView"
                android:layout_alignLeft="@+id/titleLayout"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"
                android:textSize="12sp"
                android:maxLines="1"
                android:text="간략한 시나리오를 설명하는 칸입니다. 시나리오가 이렇게 저렇게 어쩌구 저쩌구"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/newIconView"
            android:layout_width="13.3dp"
            android:layout_height="13.3dp"
            android:layout_alignLeft="@+id/cardLayout"
            android:layout_alignTop="@+id/cardLayout"
            android:visibility="invisible"
            android:background="@drawable/small_google_circle"/>
    </RelativeLayout>
</RelativeLayout>
