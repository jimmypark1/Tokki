<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clipChildren="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/carrot_frame"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/coverImgView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/i_carrot_orange"
            android:background="@drawable/big_poster_round_bg"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
             android:layout_height="60dp"
            android:layout_toRightOf="@+id/coverImgView"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
             android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="#ff5800"
            android:letterSpacing="-0.05"
            android:text="당근 100000000000개"
            android:textStyle="normal"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:layout_toRightOf="@+id/desc"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="#222222"
            android:text="1000000원"
            android:textStyle="normal"
            android:textAlignment="viewEnd"
            android:layout_centerVertical="true"
            android:gravity="center"


            tools:ignore="RtlCompat" />






    </RelativeLayout>


</RelativeLayout>
