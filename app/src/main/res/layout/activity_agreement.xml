    <LinearLayout
        android:id="@+id/totalAgreeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitleView"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="76dp"
        android:gravity="center_vertical"
        android:onClick="onClickTotakCheckBtn"


        >

        <ImageView
            android:id="@+id/totalCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="@color/colorWhite"
            android:src="@drawable/i_chck_circle_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#222222"
            android:text="모두 동의합니다."/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/totalAgreeLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#dddddd"

        >

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/agree1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalAgreeLayout"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickCheck1">
<!--
        <ImageView
