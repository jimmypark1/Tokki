        <ImageView
            android:id="@+id/checkBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:src="@drawable/i_chck_circle_2"
            />


        <TextView
            android:id="@+id/check1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkBtn1"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:textColor="#222222"
            android:textSize="15sp"
            android:text="개인정보 수집 및 이용 동의 (필수)"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:background="@drawable/i_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agree2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agree1Layout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="7dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickCheck2">
<!--
