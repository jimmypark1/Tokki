        <ImageView
            android:id="@+id/checkBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i_chck_circle_2"
            />
        <TextView
            android:id="@+id/check2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkBtn2"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:textColor="#222222"
            android:textSize="15sp"
            android:text="서비스 이용 약관 동의 (필수)"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:background="@drawable/i_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26.3dp"
        android:background="@drawable/common_btn_disable_bg"
