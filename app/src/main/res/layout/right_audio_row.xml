<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:id="@+id/rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/emptyLayout"
        android:clipChildren="false"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:id="@+id/faceBGLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gray_face_bg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/faceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/caracter_a_icon"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@+id/faceBGLayout"
            android:layout_toLeftOf="@+id/faceBGLayout"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:text="홍길동"/>

        <RelativeLayout
            android:id="@+id/contentsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nameView"
            android:layout_marginRight="67dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/right_chat_bg">

            <RelativeLayout
                android:id="@+id/playBtnlayout"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="@drawable/white_btn_bg">

                <ImageView
                    android:id="@+id/playBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/talk_play1"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/playBtnlayout"
                android:layout_marginLeft="7dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:id="@+id/progressBar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/commentCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/contentsLayout"
            android:layout_alignRight="@+id/deleteBtn"
            android:textColor="@color/colorTextGray"
            android:visibility="invisible"
            android:text="0"/>

        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="23dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/contentsLayout"
            android:layout_alignLeft="@+id/contentsLayout"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="-12dp"
            android:focusable="false"
            android:clickable="false"
            android:background="@drawable/delet_button"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/rightLayout"
        android:focusable="false"
        android:clickable="false">

        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:text="사이에 추가"/>

        <ImageView
            android:id="@+id/leftLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toLeftOf="@+id/txtView"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@color/colorBlack"/>

        <ImageView
            android:id="@+id/rightLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/txtView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@color/colorBlack"/>
    </RelativeLayout>
</RelativeLayout>
