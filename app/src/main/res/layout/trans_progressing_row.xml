<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clipChildren="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:id="@+id/coverImgView"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/no_poster"
            android:background="@drawable/big_poster_round_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/coverImgView"
            android:layout_marginLeft="15.7dp"
            android:layout_marginRight="11.7dp"
            android:layout_toRightOf="@+id/coverImgView">

            <TextView
                android:id="@+id/bestBGView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="1"/>

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/menuBtn"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/bestBGView">

                <TextView
                    android:id="@+id/titleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:textColor="#191919"
                    android:letterSpacing="-0.05"
                    android:text="제목"
                    android:textStyle="bold"
                    />


                <ImageView
                    android:id="@+id/senderImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/titleView"

                    android:src="@drawable/user_icon"
                    android:background="@drawable/round_tran_sender"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/titleView"
                    android:layout_toRightOf="@+id/senderImg"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#767676"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:text="Jimmy Park"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/titleView"
                    android:layout_toRightOf="@+id/name"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="#767676"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:textAlignment="textEnd"
                    android:text="4분전"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_toRightOf="@+id/senderImg"
                    android:background="@drawable/round_tran_msg"
                    >
                    <TextView
                        android:id="@+id/msgFrame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="0dp"
                         android:textColor="#191919"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:text="거래를 원합니다.dffghhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"/>
                </RelativeLayout>

            </RelativeLayout>






        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
