<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:orientation="vertical">

        <include layout="@layout/include_top_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingTop="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:lineSpacingExtra="9sp"
                            android:text="이름"
                            android:textColor="#666666"
                            android:textSize="11sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/et_character_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:hint="이름을 입력하세요"
                            android:inputType="text"
                            android:lineSpacingExtra="5sp"
                            android:textColorHint="#cccccc"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#666666" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <ImageView
                            android:id="@+id/iv_character_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_i_chracter"
                            android:onClick="btnProfilePhoto" />

                        <LinearLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/circle_222222"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_i_changephoto" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="9sp"
                    android:text="성격"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/et_character_personality"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="성격을 입력하세요"
                    android:inputType="text"
                    android:lineSpacingExtra="5sp"
                    android:textColorHint="#cccccc"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="9sp"
                    android:text="역할"
                    android:visibility="gone"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/et_character_role"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="역할을 입력하세요"
                    android:inputType="text"
                    android:lineSpacingExtra="5sp"
                    android:visibility="gone"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="#666666" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_8_ffffff_dddddd"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:text="등장인물 위치"
                            android:textColor="#999999"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp"
                            android:orientation="horizontal"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/tv_character_loc_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="5sp"
                                android:text="왼쪽"
                                android:textColor="#5a9aff"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/iv_character_loc_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/ic_i_check" />

                            <TextView
                                android:id="@+id/tv_character_loc_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:lineSpacingExtra="5sp"
                                android:text="오른쪽"
                                android:textColor="#666666"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/iv_character_loc_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/ic_i_check"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_8_ffffff_dddddd"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:text="등장인물 컬러"
                            android:textColor="#999999"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp"
                            android:orientation="horizontal"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/tv_character_color_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="5sp"
                                android:text="블랙"
                                android:textColor="#5a9aff"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/iv_character_color_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/ic_i_check" />

                            <TextView
                                android:id="@+id/tv_character_color_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:lineSpacingExtra="5sp"
                                android:text="화이트"
                                android:textColor="#666666"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/iv_character_color_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/ic_i_check"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_8_ffffff_dddddd"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:text="말풍선 컬러"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/iv_character_color"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_dddddd"
                            android:src="@drawable/circle_dddddd" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:lineSpacingExtra="7sp"
                            android:text="현재 컬러"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="28dp"
                            android:background="@drawable/round_14_5_e4eeff"
                            android:gravity="center"
                            android:onClick="btnColorChange">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="7sp"
                                android:text="다른 컬러 선택하기"
                                android:textColor="#5a9aff"
                                android:textSize="13sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_8_ffffff_dddddd"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:text="말풍선 텍스트 컬러 박스"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <TextView
                            android:id="@+id/tv_character_color_box_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="5sp"
                            android:text="블랙"
                            android:textColor="#5a9aff"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/iv_character_color_box_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_i_check" />

                        <TextView
                            android:id="@+id/tv_character_color_box_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:lineSpacingExtra="5sp"
                            android:text="화이트"
                            android:textColor="#666666"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/iv_character_color_box_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_i_check"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_character_reg_delete"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/round_22_ffffff_dddddd"
                        android:gravity="center"
                        android:onClick="btnRemove"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="7sp"
                            android:text="삭제"
                            android:textColor="#222222"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_character_reg_save"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_22_5a9aff"
                        android:gravity="center"
                        android:onClick="btnSave">

                        <TextView
                            android:id="@+id/tv_character_reg_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="7sp"
                            android:text="저장"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>