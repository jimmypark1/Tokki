<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:onClick="btnRadio"
            android:orientation="horizontal"
            android:tag="0">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5sp"
                android:text="영리목적 / 홍보성"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_report_radio_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_button_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:onClick="btnRadio"
            android:orientation="horizontal"
            android:tag="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5sp"
                android:text="욕설 / 인신공격"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_report_radio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_button_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:onClick="btnRadio"
            android:orientation="horizontal"
            android:tag="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5sp"
                android:text="불법 정보"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_report_radio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_button_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:onClick="btnRadio"
            android:orientation="horizontal"
            android:tag="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5sp"
                android:text="개인정보 노출"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_report_radio_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_button_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:onClick="btnRadio"
            android:orientation="horizontal"
            android:tag="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5sp"
                android:text="음란성 / 선정성"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_report_radio_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_button_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:onClick="btnRadio"
            android:orientation="horizontal"
            android:tag="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5sp"
                android:text="같은 내용 도배"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_report_radio_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_button_bg" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="9sp"
            android:text="신고내용"
            android:textColor="#666666"
            android:textSize="11sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/et_report_radio"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:hint="신고 내용을 작성해 주세요."
            android:maxLines="1"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666" />
    </LinearLayout>
</LinearLayout>