<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contentsLayout"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/coverImgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_4_dddddd"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_4_d3000000_00515151" />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_content_bottom"
            android:layout_marginStart="10dp"
            android:lineSpacingExtra="7sp"
            android:text="아무래도 이번에는"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/ll_content_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_i_tap" />

            <TextView
                android:id="@+id/tv_row_main_content_tab_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:lineSpacingExtra="1sp"
                android:text="999"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_i_speech" />

            <TextView
                android:id="@+id/tv_row_main_content_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:lineSpacingExtra="1sp"
                android:text="999"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>