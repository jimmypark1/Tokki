<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ffffff">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="358dp"
        android:layout_alignLeft="@+id/coverImgView"
        android:layout_alignTop="@+id/coverImgView"
        android:layout_alignRight="@+id/coverImgView"
        android:layout_alignBottom="@+id/coverImgView"
        android:layout_marginRight="-40dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/poster_back_shadow"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/coverImgView"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/big_poster_round_bg"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_i_artwork_empty" />

    <ImageView
        android:id="@+id/heartBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_above="@+id/shareBtn"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/coverImgView"
        android:src="@drawable/ic_i_heart_black" />

    <ImageButton
        android:id="@+id/shareBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coverImgView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/coverImgView"
        android:background="@drawable/i_share" />
</RelativeLayout>
