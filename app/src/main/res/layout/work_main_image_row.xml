<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#ffffff">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="358dp"
        android:layout_alignTop="@+id/coverImgView"
        android:layout_alignLeft="@+id/coverImgView"
        android:layout_alignRight="@+id/coverImgView"
        android:layout_alignBottom="@+id/coverImgView"
        android:layout_marginRight="-40dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/poster_back_shadow"/>

    <ImageView
        android:id="@+id/coverImgView"
        android:layout_width="200dp"
        android:layout_height="308dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_poster_vertical"
        android:background="@drawable/big_poster_round_bg"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/heartBtn"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_toRightOf="@+id/coverImgView"
        android:layout_alignTop="@+id/coverImgView"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/empty_heart"/>

    <ImageButton
        android:id="@+id/shareBtn"
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/coverImgView"
        android:layout_below="@+id/heartBtn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/share"/>
</RelativeLayout>
